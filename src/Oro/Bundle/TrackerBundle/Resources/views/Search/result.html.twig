{#
    Available variables:
    * entity       - user entity Oro\Bundle\TrackerBundle\Entity\Issue or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}

{% set showImage = false %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = indexer_item.recordTitle %}

{% set entityType = 'oro.tracker..issue.entity_label'|trans %}

{% set entityInfo = [
    {
        'title': 'oro.tracker.issue.reporter.label'|trans,
        'value': entity.reporter ? entity.reporter : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.type.label'|trans,
        'value': entity.type ? entity.type : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.summary.label'|trans,
        'value': entity.summary ? entity.summary : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.code.label'|trans,
        'value': entity.code ? entity.code : 'N/A'},
    {
        'title': 'oro.tracker.issue.priority.label'|trans,
        'value': entity.priority ? entity.priority : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.resolution.label'|trans,
        'value': entity.resolution ? entity.resolution : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.assignee.label'|trans,
        'value': entity.owner ? entity.owner : 'N/A'
    },
    {
        'title': 'oro.tracker.issue.workflow.label'|trans,
        'value': entity.workflowStep ? entity.workflowStep.label : 'N/A'
    },
] %}
